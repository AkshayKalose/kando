{{> checkbox-option 
    label="Limit to Specific Apps"
    hint="Show the menu only if a specific application is focused."
    checkedHint="This supports regular expressions like /Firefox|Chrome/."
    id="kando-properties-condition-app-checkbox"
}}

<div id="kando-properties-condition-app-collapse" class="collapse">
  <input id="kando-properties-condition-app" type="text" 
        class="form-control my-2 fs-3 kando-font" placeholder="App Name">
</div>

{{> checkbox-option 
    label="Limit to Specific Window Titles"
    hint="Show the menu only if the focused window's title contains a given text."
    checkedHint="This supports regular expressions like /Firefox|Chrome/."
    id="kando-properties-condition-window-checkbox"
}}

<div id="kando-properties-condition-window-collapse" class="collapse">
  <input id="kando-properties-condition-window" type="text" 
         class="form-control my-2 fs-3 kando-font" placeholder="Window Title">
</div>

{{> checkbox-option 
    label="Limit to Specific Pointer Positions"
    hint="Show the menu only if the pointer is in a given area on the screen."
    checkedHint="In pixels, relative to the top left corner of your main display."
    id="kando-properties-condition-pointer-checkbox"
}}

<div id="kando-properties-condition-pointer-collapse" class="collapse">
  <div class="input-group my-2">
    <input id="kando-properties-condition-pointer-x-min" type="number" class="form-control fs-3 kando-font" placeholder="Left of">
    <input id="kando-properties-condition-pointer-x-max" type="number" class="form-control fs-3 kando-font" placeholder="Right of">
    <input id="kando-properties-condition-pointer-y-min" type="number" class="form-control fs-3 kando-font" placeholder="Below">
    <input id="kando-properties-condition-pointer-y-max" type="number" class="form-control fs-3 kando-font" placeholder="Above">
  </div>
</div>

<div class='d-flex justify-content-end mt-3'>
  <button class="btn btn-secondary fs-3 kando-font me-3 my-3 px-5 ms-auto" id="kando-properties-condition-picker-cancel">Cancel</button>
  <button class="btn btn-secondary fs-3 kando-font my-3 px-5" id="kando-properties-condition-picker-ok">Done</button>
</div>