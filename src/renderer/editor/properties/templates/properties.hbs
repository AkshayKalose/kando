<div id="kando-menu-properties-area" class="visible">

  <div id="kando-menu-properties-base-settings" class='d-flex flex-column justify-content-center'>
    <div class='d-flex'>
      <button class="btn btn-primary p-0 me-3" id="kando-menu-properties-icon-button"></button>
      <input type="text" class="kando-font fs-1 form-control" id="kando-menu-properties-name" />
    </div>

    <div id="kando-menu-properties-menu-settings" class='d-flex flex-column'>
      
      {{> checkbox-option 
          label="Open at Pointer"
          hint="Else the menu will open in the screen's center."
          id="kando-menu-properties-open-at-pointer"
      }}

      <div id="kando-menu-properties-shortcut-picker"></div>

    </div>

    <div id="kando-menu-properties-item-settings" class='d-flex flex-column'></div>

    <div class="swirl2 align-self-center mt-4 mb-5 w-100" style="opacity: 0.7;"></div>

    <div id="kando-menu-properties-hint" class="align-self-center text-center kando-font fs-4" style="opacity: 0.7; width: 75%; font-style:italic"></div>

  </div>

  <div id="kando-menu-properties-icon-picker"></div>

</div>