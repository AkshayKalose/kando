<div id="kando-menu-properties-area" class="visible">

  <div id="kando-menu-properties-base-settings" class='d-flex flex-column justify-content-center'>
    <div class='d-flex'>
      <button class="btn btn-primary p-0 me-3" id="kando-menu-properties-icon-button"></button>
      <input type="text" class="kando-font fs-1 form-control" id="kando-menu-properties-name" />
    </div>

    <div id="kando-menu-properties-menu-settings" class='d-flex flex-column'>
      
      <label class='d-flex mt-3'>
        <div class="flex-grow-1">
          <div class='kando-font fs-2'>
            Open at Pointer
          </div>
          <div class='kando-font fs-5'>
            Else the menu will open in the screen's center.
          </div>
        </div>
        <input type="checkbox" class="form-check-input" id="kando-menu-properties-open-at-pointer" />
      </label>

      <div class='d-flex mt-3'>
        <div class="flex-grow-1">
          <div class='kando-font fs-2'>
            {{shortcutLabel}}
          </div>
          <div class='kando-font fs-5'>
            {{shortcutHint}}
          </div>
        </div>
        <div id="kando-menu-properties-shortcut-picker" class="align-self-center" style="flex-grow: 2;"></div>
      </div>

    </div>


    <div id="kando-menu-properties-hint" class="align-self-center text-center my-3 fs-5" style="opacity:0.5; width: 80%;">
    </div>

    <div class="swirl2 align-self-center w-100" style="opacity: 0.3;"></div>

  </div>

  <div id="kando-menu-properties-icon-picker"></div>

</div>