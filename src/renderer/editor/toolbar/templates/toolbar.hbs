<!--
  This is the button in the lower right corner which opens the editor.
-->
<button id='enter-edit-mode-button' class='btn btn-dark'>
  <i class='material-symbols-rounded'>settings</i>
</button>

<!--
  This is the editor's toolbar. It contains the tabs for the different editor
  sections.
-->
<div id='kando-editor-toolbar' class='d-flex flex-column'>

  <!--
    This is the button which closes the editor.
  -->
  <button id='leave-edit-mode-button' class='btn btn-dark rounded-end-circle'>
    <i class='material-symbols-rounded'>close</i>
  </button>

  <!--
    This is the tab bar. It contains the buttons for the different editor
    sections.
  -->
  <ul class='nav nav-tabs kando-font'>
    {{#each tabs}}
      <li class='nav-item' {{#if gapBefore}} style="margin-left: auto" {{/if}}>
        <button class='nav-link fs-3 {{#if active}} active {{/if}}' data-bs-toggle='tab'
                data-bs-target='#{{id}}'>
          <i class='material-symbols-rounded inline-icon d-none d-lg-inline-block'>{{icon}}</i>
          {{title}}
          {{#if hasCounter}}
            <span id="{{id}}-counter" class="counter">0</span>
          {{/if}}
        </button>
      </li>
    {{/each}}
  </ul>

  <!--
    This is the tab content. It contains the actual content of the tabs.
  -->
  <div class='tab-content flex-grow-1' id='kando-editor-toolbar-content'>
    {{#each tabs}}
      <div class='tab-pane h-100 {{#if active}} active {{/if}}' id='{{id}}'>
        {{{content}}}
      </div>
    {{/each}}
  </div>
</div>