<!--
  This tab displays a grid of buttons which represent deleted menus or menu items.
-->

{{#if items}}
  <div class='h-100 scrollbox mx-2' id='trash-items-list'>
    <div class="scrollbox-content">
      {{#each items}}
        <div>
          {{#if isMenu}}
            <div id="trash-item-{{index}}" class="d-flex kando-font btn btn-secondary trash-menu-button">
              <div>
                {{{icon}}}
              </div>
              <div class="align-self-center">
                <div class="name fs-4">{{name}}</div>
                <div class="shortcut fs-6">{{shortcut}}</div>
              </div>
            </div>
          {{else}}
            <div id="trash-item-{{index}}" class="d-flex kando-font btn btn-secondary trash-node-button">
              <div>
                {{{icon}}}
              </div>
              <div class="align-self-center">
                <div class="name fs-4">{{name}}</div>
              </div>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </div>
{{else}}
  <div class='d-flex flex-column justify-content-center h-100'>
    <div class='text-center kando-font fs-2'>
      {{placeholderHeading}}
    </div>
    <div class='text-center kando-font fs-5'>
      {{placeholderSubheading}}
    </div>
    <div class='text-center mb-4'>
      <span class='swirl'></span>
    </div>
  </div>
{{/if}}
 